{
  "name": "tax-report-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test:unit": "jest",
    "test:int": "npm run db:restart:test && dotenv -e .env.test -- jest --config ./jest-int.json --runInBand --no-cache",
    "test:e2e": "npm run db:restart:test && dotenv -e .env.test -- jest --config ./jest-e2e.json --runInBand --no-cache",
    "test:all": "npm run db:restart:test && dotenv -e .env.test -- jest --config ./jest-all.json --runInBand --no-cache",
    "test:unit:watch": "jest --watch",
    "test:int:watch": "npm run test:int -- --watch",
    "test:e2e:watch": "npm run test:e2e -- --watch",
    "test:all:watch": "npm run test:all -- --watch",
    "db:restart:dev": "npm run docker:up:dev && npm run prisma:migrate:dev",
    "db:restart:test": "npm run docker:up:test && npm run prisma:migrate:test",
    "prisma:migrate:dev": "dotenv -e .env.dev -- prisma migrate deploy",
    "prisma:migrate:test": "dotenv -e .env.test -- prisma migrate deploy",
    "docker:up:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:up:test": "docker-compose -f docker-compose.test.yml up -d",
    "docker:down:dev": "docker-compose -f docker-compose.dev.yml down",
    "docker:down:test": "docker-compose -f docker-compose.test.yml down"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@prisma/client": "^4.8.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.3.1",
    "prettier": "^2.3.2",
    "prisma": "^4.8.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
