generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("TAX_REPORT_DATABASE_URL")
}

model TaxReport {
  id Int @default(autoincrement()) @id
  fiscalQuarter Int
  fiscalYear Int
  file File? @relation(fields: [fileId], references: [id], onDelete: Cascade)
  fileId Int? @unique
  payments Payment[]
}

model File {
  id Int @default(autoincrement()) @id
  fileName String
  fileDestination String
  taxReport TaxReport?
}

model Payment {
  id Int @default(autoincrement()) @id
  type String
  date String
  number String
  name String
  method String
  amount String
  isExempt Boolean
  taxReport TaxReport @relation(fields: [taxReportId], references: [id], onDelete: Cascade)
  taxReportId Int
}
